<!-- services -->
<section id="services" class="pb-12">
<div class="max-w-screen-xl m-auto px-5">
  <div class="grid gap-4 grid-cols-1 md:grid-cols-3 ">
    {% for item in data.services %}
      {% if item.name === 'Services' %}
        <div class="sm:col-span-2 md:col-span-3 md:mb-5 sm:w-4/6">
          <h3 class="mb-10 text-3xl font-bold">{{ item.name }}</h3>
          <p class="">{{ item.description }}</p>
        </div>
        {% else %}
        <div class="prose dark:prose-dark">
          <h4 class="text-2xl text-bold mb-8">{{ item.name }}</h4>
          <!-- <p class="md:pb-5 ">{{ item.description | safe }}</p> -->
          <ul class="leading-8 ">
            {% for item in item.tags%}
            <li class="">
                {{item}}
            </li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="mx-auto w-full flex justify-center my-12">
    <a class="bg-purple-600 hover:bg-purple-700 text-white text-xl px-8 py-2 rounded-full " href="/process">{{ data.processTools }}</a>
  </div>
</section>
<!-- services end -->